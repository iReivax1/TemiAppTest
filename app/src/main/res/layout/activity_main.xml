<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/saveLocationInput"
            android:layout_width="675dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="120dp"
            android:layout_marginRight="300dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/enter_location"
            android:inputType="textPersonName"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorGrey" />

        <Button
            android:id="@+id/btnSaveLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="300dp"
            android:background="@color/colorLightTeal"
            android:onClick="saveLocation"
            android:text="@string/save_location"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnSavedLocations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="300dp"
            android:background="@color/colorLightTeal"
            android:onClick="savedLocationsDialog"
            android:text="@string/delete_saved_locations"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/locationSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="300dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorGrey"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnGoTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="300dp"
            android:background="@color/colorLightTeal"
            android:onClick="goTo"
            android:text="@string/go_to"
            android:textSize="18sp" />



    </LinearLayout>

</LinearLayout>